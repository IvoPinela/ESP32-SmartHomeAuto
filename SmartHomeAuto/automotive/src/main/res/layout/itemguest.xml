<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_padding"
    android:layout_marginBottom="@dimen/layout_margin_bottom"
    android:layout_marginTop="@dimen/layout_margin_top"
    android:layout_marginStart="@dimen/layout_margin_start"
    android:layout_marginEnd="@dimen/layout_margin_end"
    android:elevation="@dimen/elevation"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <!-- User Name -->
    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/title_item_text_size"
        android:textStyle="bold"
        android:textColor="@color/text_color_primary"
        android:text="@string/username_example"
        android:layout_marginEnd="@dimen/text_margin_end"/>
</LinearLayout>
