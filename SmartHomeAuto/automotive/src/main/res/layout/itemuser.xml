<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:elevation="2dp"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <!-- User Name -->
    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:text="@string/textViewUsername"
        android:layout_marginBottom="8dp"/>

    <!-- User Role -->
    <TextView
        android:id="@+id/textViewRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#00796B"
        android:text="@string/textViewRole"
        android:layout_marginBottom="4dp"/>

    <!-- MQTT User -->
    <TextView
        android:id="@+id/textViewMqttUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333"
        android:text="@string/textViewMqttUser"
        android:layout_marginBottom="4dp"/>

    <!-- MQTT Password -->
    <TextView
        android:id="@+id/textViewMqttPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333"
        android:text="@string/textViewMqttPassword"
        android:layout_marginBottom="4dp"/>

    <!-- Manager User ID -->
    <TextView
        android:id="@+id/textViewManagerUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333"
        android:text="@string/textViewManagerUserId"
        android:layout_marginBottom="4dp"/>

    <!-- Broker ID -->
    <TextView
        android:id="@+id/textViewBrokerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333"
        android:text="@string/textViewBrokerId"
        android:layout_marginBottom="4dp"/>

</LinearLayout>
