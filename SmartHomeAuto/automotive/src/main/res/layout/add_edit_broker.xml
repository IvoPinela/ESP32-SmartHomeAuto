<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:background="@android:color/black">

    <!-- Title of the Form -->
    <TextView
        android:id="@+id/formTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_add_new_broker"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/title_margin_top"
        android:textColor="@android:color/white"/>

    <FrameLayout
        android:layout_width="1392dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/formTitle"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp">

        <FrameLayout
            android:layout_width="@dimen/inner_frame_width"
            android:layout_height="410dp"
            android:layout_gravity="center"
            android:background="@drawable/soft_blue_gradient"
            android:padding="@dimen/inner_frame_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/labelClusterURL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/label_margin_top"
                    android:text="@string/label_cluster_url"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/edittext_text_size_login" />

                <EditText
                    android:id="@+id/editTextClusterURL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelClusterURL"
                    android:layout_marginTop="@dimen/edittext_margin_top"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/hint_cluster_url"
                    android:minHeight="@dimen/edittext_min_height"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/darkgray"
                    android:textSize="@dimen/edittext_text_size_login" />

                <TextView
                    android:id="@+id/labelPort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextClusterURL"
                    android:layout_marginTop="@dimen/label_margin_top"
                    android:text="@string/label_port"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/edittext_text_size_login" />

                <EditText
                    android:id="@+id/editTextPort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/labelPort"
                    android:layout_marginTop="@dimen/edittext_margin_top"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/hint_port"
                    android:inputType="number"
                    android:minHeight="@dimen/edittext_min_height"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/darkgray"
                    android:textSize="@dimen/edittext_text_size_login" />

                <Button
                    android:id="@+id/buttonSaveBroker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextPort"
                    android:layout_marginTop="@dimen/button_margin_top"
                    android:background="@color/white"
                    android:minHeight="@dimen/button_min_height"
                    android:text="@string/button_save_broker"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/buttonBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonSaveBroker"
                    android:layout_marginTop="@dimen/button_margin_top"
                    android:background="@color/darkgray"
                    android:minHeight="@dimen/button_min_height"
                    android:text="@string/button_back"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/button_text_size" />

            </RelativeLayout>

        </FrameLayout>

    </FrameLayout>

</RelativeLayout>
