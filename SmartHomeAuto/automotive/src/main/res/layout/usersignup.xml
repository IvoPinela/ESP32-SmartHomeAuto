<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/title_margin_top"
        android:text="@string/sign_up_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="1393dp"
        android:layout_height="359dp"
        android:layout_below="@id/title"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/frame_margin_top">

        <FrameLayout
            android:layout_width="@dimen/inner_frame_width"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/soft_blue_gradient"
            android:padding="@dimen/container_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <EditText
                    android:id="@+id/editTextSignupUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/element_margin_bottom"
                    android:hint="@string/username_hint"
                    android:inputType="text"
                    android:minHeight="@dimen/element_min_height"
                    android:textSize="@dimen/input_text_size" />

                <EditText
                    android:id="@+id/editTextSignupPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextSignupUsername"
                    android:layout_marginTop="@dimen/element_margin_top"
                    android:layout_marginBottom="@dimen/element_margin_bottom"
                    android:hint="@string/password_hint"
                    android:inputType="textPassword"
                    android:minHeight="@dimen/element_min_height"
                    android:textSize="@dimen/input_text_size" />

                <Button
                    android:id="@+id/buttonSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextSignupPassword"
                    android:layout_marginTop="@dimen/button_margin_top"
                    android:background="@color/white"
                    android:minHeight="@dimen/element_min_height"
                    android:text="@string/sign_up_button"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/buttonBackToLogin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_below="@id/buttonSignUp"
                    android:layout_marginTop="14dp"
                    android:background="@color/white"
                    android:minHeight="@dimen/element_min_height"
                    android:text="@string/back_to_login_button"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/button_text_size" />

            </RelativeLayout>

        </FrameLayout>

    </FrameLayout>

</RelativeLayout>
