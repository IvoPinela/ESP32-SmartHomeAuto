<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_padding"
    android:layout_marginBottom="@dimen/layout_margin_bottom"
    android:layout_marginTop="@dimen/layout_margin_top"
    android:layout_marginStart="@dimen/layout_margin_start"
    android:layout_marginEnd="@dimen/layout_margin_end"
    android:elevation="@dimen/elevation"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <!-- User Name -->
    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_item_text_size"
        android:textStyle="bold"
        android:textColor="@color/text_color_primary"
        android:text="@string/textViewUsername"
        android:layout_marginBottom="@dimen/text_margin_bottom"/>

    <!-- User Role -->
    <TextView
        android:id="@+id/textViewRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_item_text_size"
        android:textColor="@color/text_color_secondary"
        android:text="@string/textViewRole"
        android:layout_marginBottom="@dimen/text_margin_small"/>

    <!-- MQTT User -->
    <TextView
        android:id="@+id/textViewMqttUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_item_text_size"
        android:textColor="@color/text_color_secondary"
        android:text="@string/textViewMqttUser"
        android:layout_marginBottom="@dimen/text_margin_small"/>

    <!-- MQTT Password -->
    <TextView
        android:id="@+id/textViewMqttPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_item_text_size"
        android:textColor="@color/text_color_secondary"
        android:text="@string/textViewMqttPassword"
        android:layout_marginBottom="@dimen/text_margin_small"/>

    <!-- Manager User ID -->
    <TextView
        android:id="@+id/textViewManagerUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_item_text_size"
        android:textColor="@color/text_color_secondary"
        android:text="@string/textViewManagerUserId"
        android:layout_marginBottom="@dimen/text_margin_small"/>

    <!-- Broker ID -->
    <TextView
        android:id="@+id/textViewBrokerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/body_item_text_size"
        android:textColor="@color/text_color_secondary"
        android:text="@string/textViewBrokerId"
        android:layout_marginBottom="@dimen/text_margin_small"/>

</LinearLayout>
