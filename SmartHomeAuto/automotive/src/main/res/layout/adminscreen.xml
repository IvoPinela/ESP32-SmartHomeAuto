<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_padding"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/adminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/title_margin_top"
        android:text="@string/admin_screen_title"
        android:textColor="@android:color/white"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:layout_width="@dimen/container_width"
            android:layout_height="wrap_content"
            android:background="@drawable/soft_blue_gradient"
            android:padding="@dimen/container_padding"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/buttonLogOff"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height3"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:background="@color/white"
                android:text="@string/log_off_button_text"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/buttonShowDevices"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height3"
                android:layout_below="@id/buttonLogOff"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:background="@color/white"
                android:text="@string/show_devices_button_text"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/buttonShowBrokers"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height3"
                android:layout_below="@id/buttonShowDevices"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/button_margin_bottom"
                android:background="@color/white"
                android:text="@string/show_brokers_button_text"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/button_text_size" />

            <Button
                android:id="@+id/buttonShowUsers"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height3"
                android:layout_below="@id/buttonShowBrokers"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:text="@string/show_users_button_text"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/button_text_size" />

        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>
