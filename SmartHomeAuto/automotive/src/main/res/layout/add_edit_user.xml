<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_bottom_medium"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/formTitleUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_new_user"
        android:textSize="@dimen/form_title_text_size"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/margin_bottom_large"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/labelUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_label"
        android:textSize="@dimen/label_text_size"
        android:layout_alignParentStart="true"
        android:layout_below="@id/formTitleUser"
        android:layout_marginTop="@dimen/margin_top_medium"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelUsername"
        android:layout_marginTop="@dimen/margin_bottom_small"
        android:hint="@string/username_hint"
        android:minHeight="@dimen/edittext_min_height"
        android:textSize="@dimen/edittext_text_size"
        android:textColor="@color/black"
        android:textColorHint="@color/darkgray"
        android:background="@drawable/edittext_background"/>

    <TextView
        android:id="@+id/labelPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_label"
        android:textSize="@dimen/label_text_size"
        android:layout_alignParentStart="true"
        android:layout_below="@id/editTextUsername"
        android:layout_marginTop="@dimen/margin_top_medium"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelPassword"
        android:layout_marginTop="@dimen/margin_bottom_small"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:minHeight="@dimen/edittext_min_height"
        android:textSize="@dimen/edittext_text_size"
        android:textColor="@color/black"
        android:textColorHint="@color/darkgray"
        android:background="@drawable/edittext_background"/>

    <TextView
        android:id="@+id/labelMqttUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mqtt_user_label"
        android:textSize="@dimen/label_text_size"
        android:layout_alignParentStart="true"
        android:layout_below="@id/editTextPassword"
        android:layout_marginTop="@dimen/margin_top_medium"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/editTextMqttUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelMqttUser"
        android:layout_marginTop="@dimen/margin_bottom_small"
        android:hint="@string/mqtt_user_hint"
        android:minHeight="@dimen/edittext_min_height"
        android:textSize="@dimen/edittext_text_size"
        android:textColor="@color/black"
        android:textColorHint="@color/darkgray"
        android:background="@drawable/edittext_background"/>

    <TextView
        android:id="@+id/labelMqttPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mqtt_password_label"
        android:textSize="@dimen/label_text_size"
        android:layout_alignParentStart="true"
        android:layout_below="@id/editTextMqttUser"
        android:layout_marginTop="@dimen/margin_top_medium"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/editTextMqttPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelMqttPassword"
        android:layout_marginTop="@dimen/margin_bottom_small"
        android:hint="@string/mqtt_password_hint"
        android:inputType="textPassword"
        android:minHeight="@dimen/edittext_min_height"
        android:textSize="@dimen/edittext_text_size"
        android:textColor="@color/white"
        android:textColorHint="@color/darkgray"
        android:background="@drawable/edittext_background"/>

    <TextView
        android:id="@+id/labelRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/role_label"
        android:textSize="@dimen/label_text_size"
        android:layout_alignParentStart="true"
        android:layout_below="@id/editTextMqttPassword"
        android:layout_marginTop="@dimen/margin_top_medium"
        android:textColor="@color/white"/>

    <Spinner
        android:id="@+id/spinnerRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelRole"
        android:layout_marginTop="@dimen/margin_bottom_small"
        android:minHeight="@dimen/edittext_min_height"
        android:background="@drawable/spinner_background"/>

    <TextView
        android:id="@+id/labelManagerUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manager_user_id_label"
        android:textSize="@dimen/label_text_size"
        android:layout_alignParentStart="true"
        android:layout_below="@id/spinnerRole"
        android:layout_marginTop="@dimen/margin_top_medium"
        android:textColor="@color/white"/>

    <Spinner
        android:id="@+id/spinnerManagerUserId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelManagerUserId"
        android:layout_marginTop="@dimen/margin_bottom_small"
        android:minHeight="@dimen/edittext_min_height"
        android:background="@drawable/spinner_background"/>

    <TextView
        android:id="@+id/labelBrokerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/broker_id_label"
        android:textSize="@dimen/label_text_size"
        android:layout_alignParentStart="true"
        android:layout_below="@id/spinnerManagerUserId"
        android:layout_marginTop="@dimen/margin_top_medium"
        android:textColor="@color/white"/>

    <Spinner
        android:id="@+id/spinnerBrokerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelBrokerId"
        android:layout_marginTop="@dimen/margin_bottom_small"
        android:background="@drawable/spinner_background"
        android:minHeight="@dimen/edittext_min_height"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/buttonSaveUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_user_button"
        android:textSize="@dimen/button_text_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_bottom_large"
        android:background="@drawable/soft_blue_gradient"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_button"
        android:textSize="@dimen/button_text_size"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/buttonSaveUser"
        android:layout_marginEnd="@dimen/margin_end"
        android:layout_marginTop="@dimen/margin_bottom_large"
        android:background="@color/darkgray"
        android:textColor="@color/white"/>
</RelativeLayout>
