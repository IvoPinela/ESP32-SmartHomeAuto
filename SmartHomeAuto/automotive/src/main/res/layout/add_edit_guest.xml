<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:background="@android:color/black">

    <!-- Title of the Form -->
    <TextView
        android:id="@+id/formTitleUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_add_new_user"
        android:textSize="@dimen/title_text_size"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/title_margin_top"
        android:textColor="@android:color/white"/>

    <FrameLayout
        android:layout_width="1412dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/formTitleUser"
        android:layout_centerVertical="true"
        android:layout_marginTop="40dp">

        <FrameLayout
            android:layout_width="1245dp"
            android:layout_height="442dp"
            android:layout_gravity="center"
            android:background="@drawable/soft_blue_gradient"
            android:padding="@dimen/inner_frame_padding">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <!-- Username Label -->
                <TextView
                    android:id="@+id/labelUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/label_margin_top"
                    android:text="@string/label_username"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/label_text_size" />

                <!-- Username Input Field -->
                <EditText
                    android:id="@+id/editTextUsername"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_min_height"
                    android:layout_below="@id/labelUsername"
                    android:layout_marginTop="@dimen/edittext_margin_top"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/hint_username"
                    android:minHeight="@dimen/edittext_min_height"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/darkgray"
                    android:textSize="@dimen/edittext_text_size" />

                <!-- Password Label -->
                <TextView
                    android:id="@+id/labelPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextUsername"
                    android:layout_marginTop="@dimen/label_margin_top"
                    android:text="@string/label_password"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/label_text_size" />

                <!-- Password Input Field -->
                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_min_height"
                    android:layout_below="@id/labelPassword"
                    android:layout_marginTop="@dimen/edittext_margin_top"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:minHeight="@dimen/edittext_min_height"
                    android:textColor="@android:color/black"
                    android:textColorHint="@color/darkgray"
                    android:textSize="@dimen/edittext_text_size" />

                <!-- Save User Button -->
                <Button
                    android:id="@+id/buttonSaveUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextPassword"
                    android:layout_marginTop="@dimen/button_margin_top"
                    android:background="@color/white"
                    android:minHeight="@dimen/button_min_height"
                    android:text="@string/button_save_user"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/button_text_size" />

                <Button
                    android:id="@+id/buttonBack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/buttonSaveUser"
                    android:layout_marginTop="@dimen/button_margin_top"
                    android:background="@color/darkgray"
                    android:minHeight="@dimen/button_min_height"
                    android:text="@string/button_back"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/button_text_size" />

            </RelativeLayout>

        </FrameLayout>

    </FrameLayout>

</RelativeLayout>
