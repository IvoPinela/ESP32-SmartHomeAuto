<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:elevation="2dp"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <!-- Device Name -->
    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:text="Device Name"
        android:layout_marginBottom="8dp"/>

    <!-- Device Topic -->
    <TextView
        android:id="@+id/textViewTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333"
        android:text="MQTT Topic:"
        android:layout_marginBottom="4dp"/>




    <TextView
        android:id="@+id/textViewDeviceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#00796B"
        android:text="Device Type:"
        android:layout_marginBottom="4dp"/>


    <!-- Device User -->
    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333"
        android:text="Creator User:"
        android:layout_marginBottom="4dp"/>


    <!-- Device MQTT User -->
    <TextView
        android:id="@+id/textViewMqttUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333"
        android:text="MQTT User:"
        android:layout_marginBottom="4dp"/>


    <!-- Device MQTT Password -->
    <TextView
        android:id="@+id/textViewMqttPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#333"
        android:text="MQTT Password:"
        android:layout_marginBottom="4dp"/>


</LinearLayout>
